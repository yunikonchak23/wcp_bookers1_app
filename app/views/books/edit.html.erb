<strong class="edit-title">Editing Book</strong>

<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
　<% if @book.errors.any? %>
　  <div class="error">
      <h3 class="error1"><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <h4 class="item3">Title</h4>
  <%= f.text_field :title %>
  <h4 class="item4">Body</h4>
  <%= f.text_area :body %><br>
  <div class="item4"><%= f.submit 'Update Book' %></div><br>
  
  <%= link_to "show", book_path(@book.id) %>
  |
  <%= link_to "Destroy",book_path(@book),method: :delete, data: {confirm: 'Are you sure?'} %>
  |
  <%= link_to "Back",'javascript:history.back()' %>
<% end %>