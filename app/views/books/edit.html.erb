<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %><br>
  <%= f.submit 'Update Book' %>
  <p><%= link_to "show", book_path(@book.id) %></p>
  <P><%= link_to "destroy", @book, "data-confirm" => "Are you sure?" %></P>
<% end %>